{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Player Activity",
    "description": "Schema for game player activity events",
    "type": "object",
    "properties": {
        "activity_id": {
            "type": "integer",
            "description": "Unique identifier for the activity event",
            "minimum": 7000
        },
        "player_id": {
            "type": "integer",
            "description": "Unique identifier for the player",
            "minimum": 1000
        },
        "game_id": {
            "type": "integer",
            "description": "Unique identifier for the game session",
            "minimum": 4000
        },
        "event_type": {
            "type": "string",
            "description": "Type of player activity event",
            "enum": ["kill", "death", "objective", "powerup", "spawn", "respawn"]
        },
        "weapon_type": {
            "type": "string",
            "description": "Type of weapon used in the event",
            "enum": [
                "laser_rifle",
                "plasma_cannon",
                "railgun",
                "pulse_rifle",
                "energy_sword",
                "rocket_launcher",
                "sniper_rifle",
                "shotgun",
                "particle_beam",
                "quantum_blaster"
            ]
        },
        "position_x": {
            "type": "integer",
            "description": "X coordinate of the player's position",
            "minimum": -255,
            "maximum": 255
        },
        "position_y": {
            "type": "integer",
            "description": "Y coordinate of the player's position",
            "minimum": -255,
            "maximum": 255
        }
    },
    "required": [
        "activity_id",
        "player_id",
        "game_id",
        "event_type",
        "weapon_type",
        "position_x",
        "position_y"
    ],
    "additionalProperties": false
} 